<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:elevation="@dimen/standard_elevation_six_dp"
    android:focusable="true"
    android:layout_marginStart="@dimen/six_dp"
    android:layout_marginEnd="@dimen/six_dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/standard_elevation_six_dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/sixteen_dp">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prakash sharma"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/designation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_tv"
            android:text="Project Engineer"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </RelativeLayout>

</android.support.v7.widget.CardView>